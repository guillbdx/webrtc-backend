{% extends 'front/base.html.twig' %}

{% block title %}Vos paiements{% endblock %}

{% block body %}
    <h2>Vos paiements</h2>

    <table class="table">
        <tr>
            <th>Référence</th>
            <th>Description</th>
            <th>Date</th>
            <th>Montant</th>
        </tr>
        {% for transaction in transactions %}
            <tr>
                <td>
                    {{ transaction.id }}
                </td>
                <td>
                    {{ transaction.description }}
                </td>
                <td>
                    {{ transaction.createdAt|date('d/m/Y') }}
                </td>
                <td>
                    {{ transaction.amount|price }}
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
