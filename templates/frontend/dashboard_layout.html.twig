<table id="dashboard" cellpadding="0">
    <tr>
        <td id="dashboard-sidebar">
            <div id="dashboard-sidebar-top" class="text-center">
                <a href="{{ path('home') }}" class="navbar-brand">
                    Dilcam
                </a>
            </div>

            <ul class="sidebar-nav">
                <li>
                    <a href="{{ path('dashboard') }}">
